/* pages/end/end.wxss */
.container{
  width: 100%;
  height: 600rpx;
  margin: 0;
  padding: 0;
  position: relative;
}

.recordContainer{
position: fixed;
display:block;
top: 24vh;
}

.innerRecord{
position:relative;
display:flexbox;
background: rgb(255, 247, 204);
border-radius: 10px;
border: 2px solid rgb(231, 169, 96);
width: 70vw;
height: 6vh;
margin: 4px;
}

.userIcon{
position:relative;
top: 0rpx;
left: 0rpx;
width: 75rpx;
height: 75rpx;
border: 1px solid goldenrod;
border-radius: 50rpx;
}

.userID{
position:relative;
bottom: 50rpx;
left: 20rpx;
font-size: 20rpx;
color: rgb(145, 43, 12);
}

.userMaxDice{
position:relative;
height: 40rpx;
width: 300rpx;
left: 100rpx;
bottom: 50rpx;
}

.userEachDice{
position:relative;
margin-left: 5rpx;
margin-right: 5rpx;
height: 40rpx;
width: 40rpx;
}

.maxPrizeName{
position:relative;
font-size: 20rpx;
left: 280rpx;
bottom: 120rpx;
background-color: rgb(248, 202, 51);
border-radius: 10px;
width: 110rpx;
text-align: center;
color: rgb(145, 43, 12);
}

.prizeList{
position: relative;
font-size: 18rpx;
color: rgb(145, 43, 12);
left: 400rpx;
bottom: 170rpx;
}


#background{
  position: absolute;
  width: 100vw;
  height: 100vh;
  z-index: -1;
}

#recordbg{
  position: fixed;
  top: 10vh;
  width: 85vw;
  height: 80vh;
  z-index: -1;
}

#sharebutton{
  position: fixed;
  top: 84vh;
  left:20vw;
  border-radius: 20px;
  width: 25vw;
  height: 6vh;
  background-color: transparent;   /*按钮透明*/  
  border:none;				/*设置按钮边框*/
}

#exitbutton{
  position: fixed;
  top: 84vh;
  right:23vw;
  border-radius: 20px;
  width: 25vw;
  height: 6vh;
  background-color: transparent;   /*按钮透明*/  
  border:none;				/*设置按钮边框*/
}